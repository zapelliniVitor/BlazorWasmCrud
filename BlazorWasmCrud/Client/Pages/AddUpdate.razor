
@page "/person/add"
@page "/person/edit/{id:int}"
@using BlazorWasmCrud.Shared.Models

<PageTitle>@Title</PageTitle>
<h3>@Title</h3>

<div class="row">
    <div class="col-md-6">
        <a href="#" class="btn btn-secondary my-2">All records</a>

        <EditForm Model="@person" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label for="Name">Name</label>
                <InputText @bind-Value="person.Name" class="form-control" />
                <ValidationMessage For="@(() =>person.Name)" />
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <InputText @bind-Value="person.Email" class="form-control" />
                <ValidationMessage For="@(() =>person.Email)" />
            </div>

            <div class="py-2">
                @status.Message
            </div>

            <div class="py-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </EditForm>
    </div>
</div>



@code {
    [Parameter]
    public int Id { get; set; }

    private string Title = "Add person";
    Person person = new();

    Status status = new();

    private void Save()
    {
         
    }
}
